{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildTask",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "src\\helper.cpp",
                "src\\texture.cpp",
                "src\\timer.cpp",
                "src\\player.cpp",
                "src\\tileset.cpp",
                "src\\animation.cpp",
                "src\\level.cpp",
                "src\\tile.cpp",
                "-IC:\\SDL\\include\\SDL2",
                "-I${workspaceFolder}\\include",
                "-LC:\\SDL\\lib",
                "-w",
                "-Wl,-subsystem,windows",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-o",
                "main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}