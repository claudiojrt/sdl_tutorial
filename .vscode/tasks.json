{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildTask",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-IC:\\SDL\\include\\SDL2",
                "-LC:\\SDL\\lib",
                "-w",
                "-Wl,-subsystem,windows",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}